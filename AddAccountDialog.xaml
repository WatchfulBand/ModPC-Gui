<ContentDialog
    x:Class="ModPC_Gui.Pages.AddAccountDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="添加账号"
    PrimaryButtonText="保存"
    CloseButtonText="取消"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    DefaultButton="Primary"
    CornerRadius="8"
    Style="{StaticResource DefaultContentDialogStyle}">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 账号输入 -->
        <StackPanel Grid.Row="0" Spacing="4" Margin="0,0,0,16">
            <TextBlock Text="账号" Style="{ThemeResource BodyTextBlockStyle}"/>
            <muxc:TextBox 
                x:Name="UsernameBox" 
                PlaceholderText="输入账号"
                CornerRadius="4"
                Height="32"/>
        </StackPanel>

        <!-- 密码输入 -->
        <StackPanel Grid.Row="1" Spacing="4" Margin="0,0,0,16" x:Name="PasswordPanel">
            <TextBlock Text="密码" Style="{ThemeResource BodyTextBlockStyle}"/>
            <muxc:PasswordBox 
                x:Name="PasswordBox" 
                PlaceholderText="输入密码"
                CornerRadius="4"
                Height="32"
                PasswordRevealMode="Peek"/>
        </StackPanel>

        <!-- 备注输入 -->
        <StackPanel Grid.Row="2" Spacing="4" Margin="0,0,0,16">
            <TextBlock Text="备注（保存文件名）" Style="{ThemeResource BodyTextBlockStyle}"/>
            <muxc:TextBox 
                x:Name="RemarkBox" 
                PlaceholderText="输入备注（可选）"
                CornerRadius="4"
                Height="32"/>
        </StackPanel>

        <!-- 账号类型选择 -->
        <StackPanel Grid.Row="3" Spacing="4" Margin="0,0,0,16">
            <TextBlock Text="账号类型" Style="{ThemeResource BodyTextBlockStyle}"/>
            <muxc:DropDownButton 
                x:Name="AccountTypeDropDown"
                CornerRadius="4"
                Height="32">
                <muxc:DropDownButton.Content>
                    <TextBlock x:Name="SelectedTypeText" Text="Cookie" Margin="8,0"/>
                </muxc:DropDownButton.Content>
                <muxc:DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Cookie" Click="AccountTypeMenuItem_Click"/>
                        <MenuFlyoutItem Text="SDK4399" Click="AccountTypeMenuItem_Click"/>
                        <MenuFlyoutItem Text="321" Click="AccountTypeMenuItem_Click"/>
                    </MenuFlyout>
                </muxc:DropDownButton.Flyout>
            </muxc:DropDownButton>
        </StackPanel>

        <!-- 错误信息 -->
        <InfoBar 
            Grid.Row="4"
            x:Name="ErrorInfoBar"
            IsOpen="False"
            Severity="Error"
            CornerRadius="4"
            Margin="0,0,0,10"/>
    </Grid>
</ContentDialog>