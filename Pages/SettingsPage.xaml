<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ModPC_Gui.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModPC_Gui.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题区域 -->
        <TextBlock 
            Grid.Row="0"
            Text="设置"
            FontSize="32"
            FontWeight="Normal"
            Margin="46,33,0,0"
            HorizontalAlignment="Left"/>

        <!-- 内容区域 -->
        
        <Grid 
        Grid.Row="1"
        Margin="46,0"
        Background="Transparent">
            <TextBlock Text="自定义属于您的ModPC" FontSize="14" FontWeight="Light"/>
            <ScrollViewer>
                <StackPanel Spacing="20">
                    <Expander 
                        Margin="0,62,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        IsExpanded="True">
                        <Expander.Header>
                            <TextBlock Text="主题"/>
                        </Expander.Header>
                        <Expander.Content>
                            <Grid>
                                <StackPanel Margin="0,0,0,7">
                                    <TextBlock Text="颜色模式" Margin="5,6,0,0"/>

                                    <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Right" Margin="0,-35,52,-17">
                                        <RadioButton x:Name="LightThemeRadio" 
                                    Content="亮色模式"
                                    GroupName="ThemeGroup"
                                    VerticalAlignment="Center"/>

                                        <RadioButton x:Name="DarkThemeRadio" 
                                     Content="暗色模式"
                                     GroupName="ThemeGroup"
                                     VerticalAlignment="Center"/>

                                        <RadioButton x:Name="SystemThemeRadio" 
                                      Content="跟随系统"
                                      GroupName="ThemeGroup"
                                      VerticalAlignment="Center"
                                      IsChecked="True"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,7">
                                    <TextBlock Text="导航栏位置改为上侧" Margin="5,46,0,0"/>
                                    <ToggleSwitch x:Name="TopNavToggle"
                                              HorizontalAlignment="Right"
                                              Margin="0,-32,0,-12"
                                              Toggled="TopNavToggle_Toggled"/>
                                </StackPanel>
                            </Grid>
                        </Expander.Content>
                    </Expander>

                    <Expander 
                        Margin="0,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        IsExpanded="True">
                        <Expander.Header>
                            <TextBlock Text="客户端路径"/>
                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="0,10,0,0" Spacing="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="客户端路径"/>
                                    <AutoSuggestBox 
                                        x:Name="ClientPathBox"
                                        PlaceholderText="客户端路径（按回车保存）"
                                        Margin="90,-6,10,6"
                                        Grid.Column="0"
                                        QuerySubmitted="ClientPathBox_QuerySubmitted"
                                        TextChanged="ClientPathBox_TextChanged"/>
                                    <Button 
                                        x:Name="BrowseButton"
                                        Content="浏览"
                                        Grid.Column="1"
                                        Margin="0,-6,0,6"
                                        Click="BrowseButton_Click"/>
                                </Grid>
                                <TextBlock x:Name="PathErrorText" 
                                           Foreground="Red" 
                                           Visibility="Collapsed"
                                           TextWrapping="WrapWholeWords"
                                           Margin="0,-5,0,0"/>
                            </StackPanel>
                        </Expander.Content>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>