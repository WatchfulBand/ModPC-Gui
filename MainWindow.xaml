<Window
    x:Class="ModPC_Gui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ModPC Gui">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid x:Name="CustomTitleBar" Margin="4,7,0,0"  
              Height="32"   
              VerticalAlignment="Top"  
              Background="Transparent">
            <TextBlock Text="{x:Bind Title}"   
                       VerticalAlignment="Center"  
                       Margin="12,0"  
                       FontSize="14"/>
        </Grid>
        <NavigationView 
            x:Name="navigationView" 
            IsBackButtonVisible="Collapsed"
            Margin="0,47,0,0"  
            IsPaneOpen="False"
            SelectionChanged="NavigationView_SelectionChanged"
            PaneTitle="ModPC"
            >
            <NavigationView.MenuItems>
                <!-- 首页 -->
                <NavigationViewItem Tag="BlankPage1" Content="首页">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE80F;"/>
                        <!-- Home图标 -->
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- 账号 -->
                <NavigationViewItem Tag="BlankPage2" Content="账号">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE77B;"/>
                        <!-- Contact图标 -->
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- 启动 -->
                <NavigationViewItem Tag="BlankPage3" Content="启动">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE909;"/>
                        <!-- World图标 -->
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- 皮肤 -->
                <NavigationViewItem Tag="BlankPage4" Content="皮肤">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE776;"/>
                        <!-- AddFriend图标 -->
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <!-- 账号信息 -->
                <NavigationViewItem Tag="BlankPage5" Content="账号信息">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE910;"/>
                        <!-- Message图标 -->
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>

            <Frame x:Name="contentFrame"/>
        </NavigationView>
    </Grid>
</Window>